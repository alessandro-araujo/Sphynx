{
    "name": "vendor/api",
    "description": "Framework for building RESTful APIs",
    "type": "api-rest-full",
    "require": {
        "php": "^8.3",
        "usmanhalalit/pixie": "^2.0",
        "firebase/php-jwt": "^6.11",
        "ext-pdo": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/app/",
            "Core\\": "src/core/",
            "Router\\": "src/routes/",
            "Database\\": "src/Databases/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
